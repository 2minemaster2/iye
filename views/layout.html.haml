%html
  %head
    %title
      IYE
    %link{ rel: 'stylesheet', media: 'screen', href: "#{root_path}stylesheets/iye.css" }
    %script{ src: "#{root_path}javascripts/iye.js" }
    %script{ src: '//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js' }
    %link{ rel:'stylesheet',
      href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css',
      integrity: 'sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u',
      crossorigin: 'anonymus' }
    %link{ rel:'stylesheet',
      href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css',
      integrity: 'sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp',
      crossorigin: 'anonymus' }
    %script{ src: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js',
      integrity: 'sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa',
      crossorigin: 'anonymous'}

  %body
    .header
      %nav
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{ type: 'button', 'data-toggle': 'collapse', 'data-target': '#bs-example-navbar-collapse-1', 'aria-expanded': false }
              %span.sr-only Toggle navigation
            %a.navbar-brand{ href: root_path }IYE
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %form.navbar-form.navbar-left{ action: root_path, method: 'get'}
                .form-group
                  %input.form-control{ name: 'filters[key]', type: 'text', value: ERB::Util.html_escape(filter_params["key"]), placeholder: 'Key:' }
                .form-group
                  %input.form-control{ name: 'filters[text]', type: 'text', value: ERB::Util.html_escape(filter_params["text"]), placeholder: 'Text:' }
                .form-group
                  %input.form-control.checkbox{ name: 'filters[incomplete]', type: 'checkbox', checked: (filter_params["incomplete"] == "on" ? checked : '') }
                  Incomplete
                .form-group
                  %input.form-control.checkbox{ name: 'filters[empty]', type: 'checkbox', checked: (filter_params["empty"] == "on" ? checked : '') }
                  Empty
                .btn-group.btn-group-sm
                  %input.btn.btn-primary{ type: 'submit',  value: 'Apply Filter' }

              - if filter_params.any?
                %form{ action: root_path, method: 'get'}
                  %input.btn.btn-text.btn-sm{ type: 'submit', value: 'Clear Filter' }
            .btn-group.pull-right.btn-custom
              %a.btn.btn-success{ href: "#{root_path}new?key=#{ERB::Util.html_escape filter_params['key']}"}
                New Translation

    .content
      = yield
